<beans xmlns="http://www.springframework.org/schema/beans"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:jaxws="http://cxf.apache.org/jaxws"
      xmlns:spring="http://www.springframework.org/schema/beans"
      xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
 						http://cxf.apache.org/jaxws http://cxf.apache.org/schemas/jaxws.xsd">

    <!-- Load CXF modules from cxf.jar -->
    <import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />

	<bean id="listMessages" class="se.skltp.messagebox.services.ListMessagesImpl"/>
	<bean id="getMessages" class="se.skltp.messagebox.services.GetMessagesImpl"/>
	<bean id="deleteMessages" class="se.skltp.messagebox.services.DeleteMessagesImpl"/>
	<bean id="receiveMessage" class="se.skltp.messagebox.services.ReceiveMessagesImpl"/>
	<bean id="generateUrl" class="se.skltp.messagebox.services.GenerateUrlImpl"/>
	<bean id="pingForConfiguration" class="se.skltp.messagebox.services.PingForConfigurationImpl"/>

  	<jaxws:endpoint id="listMsgs"
                  	implementor="#listMessages"
                  	address="/ListMessages/1/rivtabp21" />
    <jaxws:endpoint id="getMsgs"
                   	implementor="#getMessages"
                   	address="/GetMessages/1/rivtabp21" />
    <jaxws:endpoint id="deleteMsgs"
                   	implementor="#deleteMessages"
                   	address="/DeleteMessages/1/rivtabp21" />

    <jaxws:endpoint id="receiveMsgs"
                   	implementor="#receiveMessage"
                   	address="/ReceiveMessage" />

    <jaxws:endpoint id="genUrl"
                   	implementor="#generateUrl"
                   	address="/GenerateUrl/1/rivtabp21" />

    <jaxws:endpoint id="pingForConfig"
                   	implementor="#pingForConfiguration"
                   	address="/PingForConfiguration/1/rivtabp21" />
</beans>
