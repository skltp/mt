<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure//EN" "http://jetty.mortbay.org/configure.dtd">


<!-- Jetty-specific context used from maven (mvn jetty:run). Sets up the database connection. -->
<Configure class="org.eclipse.jetty.webapp.WebAppContext">

    <!-- Setup the datasource -->
    <New id="MessageboxDataSource" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg></Arg>
        <Arg>jdbc/MessageboxDataSource</Arg>
        <Arg>
            <New class="com.mysql.jdbc.jdbc2.optional.MysqlConnectionPoolDataSource">
                <Set name="Url">jdbc:mysql://localhost:3306/messagebox</Set>
                <Set name="User">messageboxuser</Set>
                <Set name="Password">messageboxpassword</Set>
            </New>
        </Arg>
    </New>

    <!-- Setup the config  -->
    <New id="MessageboxJmsConfig" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg></Arg>
        <Arg>bean/MessageboxJmsConfig</Arg>
        <Arg>
            <New class="se.skltp.mb.svc.loghandler.ConfigBean">
                <Set name="errorQueueName">MT_DEFAULT_ERROR</Set>
                <Set name="infoQueueName">MT_DEFAULT_INFO</Set>
                <Set name="brokerURL">tcp://localhost:61616</Set>
                <Set name="componentName">Messagebox</Set>
                <Set name="errorThreshold">WARNING</Set>
                <Set name="infoThreshold">INFO</Set>
                <Set name="active">true</Set>

            </New>
        </Arg>
    </New>

</Configure>
